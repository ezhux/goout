<h1>Editing study_program</h1>

<% form_for(@study_program) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :subject_area_id %><br />
    <%= collection_select("study_program", "subject_area_id", SubjectArea.all(:order => :title), :id, :title, {:prompt => t(:select_subject_area) }  )%> 
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @study_program %> |
<%= link_to 'Back', study_programs_path %>
