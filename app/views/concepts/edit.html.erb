<h1>Editing concept</h1>

<% form_for(@concept) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

<%= render "revision", :current_revision => @current_revision,  :object => Revision.new %> 

  <p>
    <%= f.submit t(:update) %>
  </p>
<% end %>

<%= link_to 'Show', @concept %> |
<%= link_to 'Back', concepts_path %>
