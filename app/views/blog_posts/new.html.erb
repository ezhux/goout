<h1>New blog_post</h1>

<%= error_messages_for :blog_post %>

<% form_for(@blog_post) do |f| %>
	<p>
	  <b>Time</b><br />
	  <%= f.text_field :time %>
	</p>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', blog_posts_path %>
