<% remote_form_for (@activity, :url => user_activities_path) do |f| %>
  <fieldset>
    <%= error_messages_for 'activity' %>
    <div id="activity_type">
        <%= select_tag "my_type", options_for_select([[t(:full_study), "full_study"], [t(:exchange_study), "exchange_study"], [t(:internship), "internship"]] ),
        {:style => "width: 400px;", :onchange => "#{remote_function(:url  => {:action => "update_fields"},
   		 :with => "'activity_type='+value")}"}   %>
    </div>
    <div id="exchange_program" style="display: none" ></div>
    <div id="country">
        <%= collection_select("", :country_id, Country.find(:all, :order => :title), :id, :title, 
        {:prompt   => t(:select_country)},
        {:style => "width: 400px;", :onchange => "#{remote_function(:url  => {:action => "update_organizations"},
         :with => "'country_id='+value")}"}  ) %>
     </div>
    <div id="organization"><%= select_tag "", options_for_select([t(:select_country_first), ""]), {:style => "width: 400px;", :disabled => true} %></div>
    <div id="study_info">
        <div id="subject_area">
                <%= collection_select("", "subject_area_id", SubjectArea.find(:all, :order => :title), :id, :title, 
                {:prompt => t(:select_subject_area) },
                {:style => "width: 400px;", :onchange => "#{remote_function(:url  => {:action => "update_study_programs"},
                 :with => "'subject_area_id='+value")}"} ) %>
        </div>         
        <div id="study_program"> <%= select_tag "", options_for_select([t(:select_subject_area_first), ""]), {:disabled => true, :style => "width: 400px" } %></div>
    </div>

    <div id="activity_area" style="display: none"> </div>

    <div id="from">
        <%= date_select("activity", "from", options = {:start_year => Time.now.year - 15} )%>
    </div>
    <div id="to">
        <%= date_select("activity", "to", options = {:start_year => Time.now.year - 15} ) %> <span id="is_current"> <%= check_box("activity", "current", {:onchange => "$(activity_to_1i).toggle(); $(activity_to_2i).toggle(); $(activity_to_3i).toggle()"}) %></span>
    </div>
    <%= f.submit t(:create) %>

    <%= button_to_function t(:cancel) do |page|
        page.visual_effect :blind_up, "add_activity_form"
        page.show "add_activity_link"
      end %>
 </fieldset>
<% end %>
