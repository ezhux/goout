<h1>Editing university</h1>

<% form_for(@university) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :country_id %><br />
    <%= select("university", "country_id", Country.find(:all).collect{ |c| [ c.title, c.id] }) %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @university %> |
<%= link_to 'Back', universities_path %>
