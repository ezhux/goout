<h1>Listing countries</h1>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% @countries.each do |country| %>
  <tr>
    <td><%=h country.title %> (<%= country.universities.size %>)</td>
    <td><%= link_to 'Show', country %></td>
    <td><%= link_to 'Edit', edit_country_path(country) %></td>
    <td><%= link_to 'Destroy', country, :confirm => t(:are_you_sure), :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New country', new_country_path %>
