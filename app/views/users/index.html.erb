<h1>Listing users</h1>

<table>

<% for user in @users %>
    <tr>
        <td><%= avatar_for(user) %></td> 
        <td><%= link_to user.username, user_path(user.username) %></td>
        <td><%=h user.password %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, :confirm => t(:are_you_sure), :method => :delete %></td>
    </tr>
<% end %>

</table>
<br />
<div>
<%= will_paginate @users %>
</div>
<br />
<%= link_to 'New user', new_user_path %>
