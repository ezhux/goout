<p>
  <b><%= t(:username) %>:</b>
  <%=h @user.username %>
</p>

<p>
  <b><%= t(:password) %>:</b>
  <%=h @user.password %>
</p>

<p>
  <b><%= t(:email) %>:</b>
  <%=h @user.email %>
</p>

<p>
  <b><%= t(:blog) %>:</b>
  <%= link_to @user.blog_url, user_posts_path(@user) %>
</p>

<p>
  <b><%= t(:studies) %>:</b>
    <span id="add_study_link">
      <%= link_to_remote t(:new_entry),
        {:url => new_user_study_path(@user), 
        :method => :get},
        :href => new_user_study_path(@user)
      %>
    </span>
    <div id="add_study_form"> </div>
	<div id="add_university_form"></div>
    <div id="studies_for_user">
      <%= render :partial => "studies/study", :collection => @user.studies %>
    </div>
</p>
<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
