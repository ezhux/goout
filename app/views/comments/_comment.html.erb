<div class="comment" id="comment_<%= comment.id %>">
 <%= avatar_for(comment.user) %>
 <%= if comment.user_id.nil? 
   t(:anonymous)
 else
 link_to comment.user.username, profile_for(comment.user) 
end %>
<span class="postDate"><%= h comment.created_at.as_lt_words %></span>
<span class="edit_link" style="float: right">
  <%= link_to_remote t(:delete), 
    :url => user_post_comment_path(comment.post.user, comment.post, comment),
    :method => :delete,
    :confirm => t(:are_you_sure) 
  %>
</span>
<p><%= sanitize comment.body %></p>    
</div>
