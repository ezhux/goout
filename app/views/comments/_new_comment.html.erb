<% remote_form_for(@comment, :url => user_post_comments_path) do |f| %>
  <p>
    <%= f.text_area :body %>
  </p>
  <%= f.hidden_field(:in_reply_to_id, :value => @parent_comment) %>
  <p>
  <%= f.submit button_name %> 
  <%= button_to_function t(:cancel) do |page|
        page.visual_effect :blind_up, "new_comment_form_for_post_#{@post.id}"
        page.show "add_comment_link_for_post_#{@post.id}"
      end
  %>
  </p>
<% end %>

