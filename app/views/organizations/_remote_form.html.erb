<h1>New organization</h1>
<% remote_form_for(@organization) do |f| %>
<span class="notice"><%= t(:organization_is_pending) %></span>
  <%= f.error_messages %>
 
  <p>
    <%= f.label :country_id %><br />
    <%= f.collection_select :country_id, Country.all(:order => :title), :id, :title, :selected => params[:country_id].to_i  %>
  </p>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :city %><br />
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.submit t(:create) %>
  </p>
  
<% end %>
