<% remote_form_for (@organization) do |f| %>
  <fieldset>
    <%= error_messages_for 'organization' %>
    <%= render :partial => "basic_fields", :locals => {:f => f} %>
    <%= f.submit t(:create) %>
    <%= button_to_function t(:cancel) do |page|
        page.visual_effect :blind_up, "add_organization_form"
        page.visual_effect :blind_down, "add_activity_form"
        page.show "add_organization_link"
        page.show "organizations"
        page.show "add_activity_link"
      end %>
 </fieldset>
<% end %>
