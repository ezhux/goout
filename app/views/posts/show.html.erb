<% unless @post.comments.empty? %>
  <p>
    <b>Comments:</b> <%=h @post.comments.size %>
  </p>
    <% @post.comments.each do |comment| %>
      <p><%=  comment.user_id.nil? ? "Anonimas" : User.find(comment.user_id).username %>
      <%= h comment.created_at.as_lt_words %></p>
      <p><%= h comment.body %></p>    
      <br />
  <% end %>
<% end %>

<h3>New Comment</h3>
