<p>
  <b><%=h @post.title %></b>
</p>

<p>
  <%=h @post.body %>
</p>

<p>
  <b><%= t(:comments) %>:</b> <%=h @post.comments.size %>
</p>

<div id="comments_for_post_<%= @post.id %>">

   <%= render :partial => "comments/comment", :collection => @post.comments %>

  <div id="add_comment_link_for_post_<%= @post.id %>">
    <%= link_to_remote t(:new_comment), :url => new_post_comment_path(@post.id), :method => :get %>
  </div>

  <div id="new_comment_form_for_post_<%= @post.id %>">

  </div>

</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', url_for(:back) %>
