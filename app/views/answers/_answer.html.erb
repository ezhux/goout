<div class="answer_short" id="answer_<%= answer.id %>">
 
  <div>
    <%= link_to_remote image_tag("arrow_up.png"), :url => {:controller => "answers", :action => "vote_for", :answer_id => answer.id} %>
    <span id="votes_for_<%= answer.id %>"><%= answer.try(:vote_for) %></span>
  </div>
  <div>
  <%= sanitize truncate(answer.body, :length => 80, :ommision => "...") %>
  </div>
  <div>
    <%= link_to_remote image_tag("arrow_down.png"), :url => {:controller => "answers", :action => "vote_against", :answer_id => answer.id} %>
    <span id="vote_against_<%= answer.id %>"><%= answer.try(:vote_against) %></span>
  </div>
</div>
